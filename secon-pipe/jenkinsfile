pipeline {
  agent {
    docker { 
      image 'python:3.9-alpine'
      args '-v /var/lib/jenkins/jobs/samplejob/workspace:/workspace'
      stopTimeout 30 // Increase the timeout to 30 seconds
    }
  }
  stages {
    stage('Install Flask') {
      steps {
        sh 'pip install Flask'  // Install Flask
      }
    }
    stage('Check Flask Version') {
      steps {
        sh 'python -m flask --version'  // Check Flask version
      }
    }
  }
}

